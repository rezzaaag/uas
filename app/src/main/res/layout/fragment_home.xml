<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:id="@+id/website_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://developer.android.com"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:inputType="text"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"/>

    <Button
        android:id="@+id/btn_openwebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Open Website"
        android:backgroundTint="#DB7093"
        app:layout_constraintStart_toStartOf="@+id/website_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/website_edit_text"
        tools:ignore="MissingConstraints"/>
</LinearLayout>